#!/bin/csh -f
###

rm -rf 1.xml
rm -rf 2.xml

set today = `date +%Y%m%d`
echo $today

set link="https://epg.pw/api/epg.xml?lang=zh-hant&timezone=QXNpYS9UYWlwZWk%3D&date="$today"&channel_id=369218"
echo $link


#壹電視新聞
curl `$link` > 1.xml

#年代新聞
curl https://epg.pw/api/epg.xml\?lang\=zh-hant\&timezone\=QXNpYS9UYWlwZWk%3D\&date\=20250126\&channel_id\=369247 > 2.xml
